<%= form_with(model: post, html: {id:"my_#{params[:action]}_form"}) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :language_id, style: "display: block" %>
    <%= form.select :language_id, Language.all.collect {|x|[x.name,x.id]} %>
  </div>

  <div>
    <%#= form.label :demande_id, style: "display: block" %>
    <%= form.hidden_field :demande_id %>
    <p><%=post.demande.name%></p>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :pic, style: "display: block" %>
    <%= form.file_field :pic %>
  </div>

  <div>
    <%= form.label :rec, style: "display: block" %>
    <%#= form.hidden_field :rec %>
    <div>
              <div hidden id="viz">
                                <canvas id="analyser" width="1024" height="500"></canvas>
                                                <canvas id="wavedisplay" width="1024" height="500"></canvas>
                                                        </div>
                                                                <div id="controls">
                                                                                  <img id="record" src="/img/mic128.png" onclick="toggleRecording(this);">
                                                                                                  <a id="save" href="#"><img src="/img/save.svg"></a>
                                                                                                          </div>

                                                                                                              </div>
  </div>

  <div>
    <%= form.label :info, style: "display: block" %>
    <%= form.text_area :info %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
